<body>
  <div id="inicio">
    <h1>¿Cómo te sientes hoy?</h1>
    <button class="emotion-button" onclick="mostrarRespuesta('horrible')">😢 Horrible</button>
    <button class="emotion-button" onclick="mostrarRespuesta('mal')">🙁 Mal</button>
    <button class="emotion-button" onclick="mostrarRespuesta('masomenos')">😐 Más o menos</button>
    <button class="emotion-button" onclick="mostrarRespuesta('bien')">🙂 Bien</button>
    <button class="emotion-button" onclick="mostrarRespuesta('excelente')">😄 Excelente</button>
  </div>

  <div id="respuesta" class="hidden">
    <h1 id="estado"></h1>
    <p class="message" id="mensaje"></p>
    <div class="menu">
      <h3>Cosas que podrías hacer:</h3>
      <ul id="sugerencias"></ul>
      <button class="emotion-button" onclick="volver()">🔁 Volver al inicio</button>
    </div>
  </div>

  <script>
    function mostrarRespuesta(estado) {
      const fondos = {
        horrible: "#3a3f5c",
        mal: "#486b92",
        masomenos: "#7c7c7c",
        bien: "#4db8ac",
        excelente: "#ff7f50"
      };

      const mensajes = {
        horrible: "Está bien no estar bien. Hoy puedes empezar de nuevo.",
        mal: "Las emociones pasan. Respira, tómate tu tiempo.",
        masomenos: "Ni bien ni mal está bien. Puedes mejorar tu día con algo pequeño.",
        bien: "¡Qué bueno! Aprovecha este estado para hacer algo bonito.",
        excelente: "¡Wow! Estás brillando hoy. Contágialo al mundo."
      };

      const sugerencias = {
        horrible: [
          "🎵 Escucha tu música favorita.",
          "🎬 Mira una película que te guste.",
          "📞 Habla con alguien importante para ti.",
          "🚶 Da un pequeño paseo.",
          "📝 Escribe lo que sientes (libera mucho)."
        ],
        mal: [
          "🌬️ Haz respiraciones profundas.",
          "📺 Mira una serie tranquila.",
          "📚 Lee algo que te inspire.",
          "☕ Tómate algo calentito y reconfortante."
        ],
        masomenos: [
          "🍫 Come algo rico.",
          "🎨 Haz algo creativo aunque sea simple.",
          "📱 Manda un mensaje lindo a alguien.",
          "🧘 Estírate o medita 5 minutos."
        ],
        bien: [
          "💬 Habla con alguien que quieras.",
          "🏃 Haz ejercicio ligero.",
          "📷 Toma una foto de algo bonito.",
          "🎶 Pon música alegre y baila un rato."
        ],
        excelente: [
          "💌 Felicita a alguien solo porque sí.",
          "🎉 Haz algo creativo o loco.",
          "🎤 Canta en voz alta.",
          "🌟 Comparte tu buena vibra con otros."
        ]
      };

      document.body.style.backgroundColor = fondos[estado];
      document.getElementById("estado").textContent = `Te sientes ${estado.toUpperCase()}`;
      document.getElementById("mensaje").textContent = mensajes[estado];

      const lista = document.getElementById("sugerencias");
      lista.innerHTML = "";
      sugerencias[estado].forEach(item => {
        const li = document.createElement("li");
        li.textContent = item;
        lista.appendChild(li);
      });

      document.getElementById("inicio").classList.add("hidden");
      document.getElementById("respuesta").classList.remove("hidden");
    }

    function volver() {
      document.getElementById("respuesta").classList.add("hidden");
      document.getElementById("inicio").classList.remove("hidden");
      document.body.style.backgroundColor = "#000";
    }
  </script>
</body>
</html>
